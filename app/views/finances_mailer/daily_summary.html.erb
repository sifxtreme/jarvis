<div>
  <h3>Current Credit Card Balance</h3>
  <span style="font-family: monospace; font-size: 14px">$<%= @balance %></span>
</div>

<div>
  <h3>Total Spent this Month</h3>
  <span style="font-family: monospace; font-size: 14px">$<%= @total %></span>
</div>

<div>
  <h3>Categories</h3>
  <table style="border-collapse: collapse">
    <% @all_categories.each do |category| %>
      <tr style="font-family: monospace; font-size: 14px">
        <td style="padding: 5px; border: 1px solid black; text-align: right; font-family: monospace; font-size: 14px"><%= format_number(category.total) %></td>
        <td style="padding: 5px; border: 1px solid black; font-family: monospace; font-size: 14px"><%= category.category || "???" %></td>
      </tr>
    <% end %>
  </table>
</div>

<div>
  <h3>Uncategorized Records</h3>
  <table style="border-collapse: collapse">
    <% @uncategorized_records.each do |x| %>
      <tr style="font-family: monospace; font-size: 14px">
        <td style="padding: 5px; border: 1px solid black; text-align: right; font-family: monospace; font-size: 14px"><%= format_number(x.amount) %></td>
        <td style="padding: 5px; border: 1px solid black; font-family: monospace; font-size: 14px"><%= x.plaid_name %></td>
      </tr>
    <% end %>
  </table>
</div>