<h3>Categories</h3>
<table style="font-family: monospace; font-size: 14px">
  <% @all_categories.each do |category| %>
    <tr style="font-family: monospace; font-size: 14px">
      <td style="text-align: right; font-family: monospace; font-size: 14px"><%= format_number(category.total) %></td>
      <td style="font-family: monospace; font-size: 14px">:</td>
      <td style="font-family: monospace; font-size: 14px"><%= category.category || "???" %></td>
    </tr>
  <% end %>
</table>
<h3>Uncategorized Records</h3>
<table style="font-family: monospace; font-size: 14px">
  <% @uncategorized_records.each do |x| %>
    <tr style="font-family: monospace; font-size: 14px">
      <td style="text-align: right; font-family: monospace; font-size: 14px"><%= format_number(x.amount) %></td>
      <td style="font-family: monospace; font-size: 14px">:</td>
      <td style="font-family: monospace; font-size: 14px"><%= x.plaid_name %></td>
    </tr>
  <% end %>
</table>